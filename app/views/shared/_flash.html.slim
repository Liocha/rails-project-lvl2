- if flash.any?
  .app-flash
    - flash.each do |type, body|
      - next unless %w(success notice error info danger warning).include?(type.to_s)
      - type = type == 'notice' ? 'success' : type
      .alert.alert-flash class="alert-#{type}"
        .container

        .d-flex

        .flex-shrink-0

        .flex-grow-1.ms-3
          h6.text-uppercase.text-reset.my-1 
            = t("headline.#{type}")
          - if body.kind_of?(Array)
            ul.mb-0
              - body.each do |message|
                li
                  = message
          - else
            p.mb-0
              = body

